<Window x:Class="ImageCompression.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageCompression"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF3A3333">
        <Canvas x:Name="ImageLoader" Width="400" Height="400" Background="Transparent" MouseUp="LoadImage">
            <Image x:Name="Compressee" Width="400" Height="400"></Image>
        </Canvas>
        <Button Content="Do Something" HorizontalAlignment="Left" Margin="106,91,0,0" VerticalAlignment="Top" Click="Compress"/>
    </Grid>
</Window>
