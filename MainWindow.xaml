<Window x:Class="ImageCompression.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageCompression"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF3A3333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="compress" VerticalAlignment="Top" Click="Compress" Width="100"/>
            <Button Content="uncompress" VerticalAlignment="Top" Click="OpenCompressed" Width="100"/>
            <Button Content="motion vector" VerticalAlignment="Top" Click="MotionVectors" Width="100"/>
        </StackPanel>
        <Canvas Grid.Column="0" x:Name="ImageLoader" Background="Transparent" Margin="0 20 20 0" MouseUp="LoadImage">
            <Image x:Name="Compressee"/>
        </Canvas>
        <Canvas Grid.Column="1" x:Name="SourceLoader" Background="Transparent" Margin="20 20 0 0" MouseUp="LoadSource">
            <Image x:Name="Source"/>
        </Canvas>
    </Grid>
</Window>
